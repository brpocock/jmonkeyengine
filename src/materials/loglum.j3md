MaterialDef Log Lum 2D {

    MaterialParameters {
        Texture2D m_Texture
        Vector2 m_BlockSize
        Vector2 m_PixelSize
        Float m_NumPixels
        Boolean m_DecodeLum
        Boolean m_EncodeLum
        Boolean m_Blocks
        Boolean m_ComputeMax
    }

    Technique {
        VertexShader GLSL100: sprite2d.vert
        FragmentShader GLSL100: loglum.frag

        WorldParameters {
            WorldOrthoMatrix
        }

        Defines {
            ENCODE_LUM : m_EncodeLum
            DECODE_LUM : m_DecodeLum
            BLOCKS : m_Blocks
            COMPUTE_MAX : m_ComputeMax
        }
    }

}