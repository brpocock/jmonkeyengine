MaterialDef Point Sprite {

    MaterialParameters {
        Texture2D m_Texture
    }

    Technique {

        VertexShader GLSL100: point_sprite.vert
        FragmentShader GLSL100: point_sprite.frag

        WorldParameters {
            WorldViewProjectionMatrix
        }

        RenderState {
            Blend AlphaAdditive
            DepthWrite Off
            AlphaTestFalloff 0.01
        }

        Defines {
            USE_TEXTURE : m_Texture
        }
    }

}