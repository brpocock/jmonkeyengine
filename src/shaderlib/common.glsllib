vec3 Common_UnpackNormal(in vec3 norm){
    return (norm * vec3(2.0)) - vec3(1.0);
}

vec3 Common_PackNormal(in vec3 norm){
    return (norm * vec3(0.5)) + vec3(0.5);
}

