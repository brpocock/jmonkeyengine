MaterialDef Pre Shadow {
    Technique {
        VertexShader GLSL100 : preshadow.vert
        FragmentShader GLSL100 : preshadow.frag

        WorldParameters {
            WorldViewProjectionMatrix
            WorldViewMatrix
        }

        RenderState {
            FaceCull Off
            DepthTest On
            DepthWrite On
            PolyOffset 5 0
            ColorWrite Off
        }
    }
}